# ============================================
# Ethereum Trading MCP Server 配置文件
# ============================================
# 复制此文件为 .env 并填入实际配置值

# ============================================
# Ethereum 网络配置
# ============================================

# Ethereum RPC 节点地址（必需）
# 默认使用公共节点，可替换为 Infura/Alchemy/本地节点
ETHEREUM_RPC_URL=https://eth.llamarpc.com

# 链 ID (1=主网, 5=Goerli, 11155111=Sepolia)
CHAIN_ID=1

# ============================================
# 钱包配置
# ============================================

# 私钥（用于签名交易，可选）
# ⚠️ 警告：生产环境不要直接存储私钥！使用硬件钱包或密钥管理服务
# 格式：不带 0x 前缀的 64 位十六进制字符串
# ETH_PRIVATE_KEY=your_private_key_here_without_0x_prefix
ETH_PRIVATE_KEY=

# ============================================
# 交易配置
# ============================================

# 默认滑点容差（以基点为单位，50 = 0.5%）
DEFAULT_SLIPPAGE_BPS=50

# Gas 价格策略（fast/standard/slow）
GAS_PRICE_STRATEGY=standard

# 最大 Gas 限制
MAX_GAS_LIMIT=500000

# ============================================
# 日志配置
# ============================================

# 日志级别 (trace/debug/info/warn/error)
LOG_LEVEL=info

# 是否启用 JSON 格式日志（生产环境推荐）
LOG_JSON_FORMAT=false

# ============================================
# 服务器配置
# ============================================

# 服务器名称
SERVER_NAME=ethereum-trading-server

# 服务器版本
SERVER_VERSION=0.1.0

# ============================================
# 测试模式配置（开发用）
# ============================================

# 是否启用测试模式（测试模式下不连接真实网络）
TEST_MODE=false

# 测试模式下的固定余额值
TEST_BALANCE=100.0

# ============================================
# API 密钥配置（可选）
# ============================================

# Alchemy API Key（用于更稳定的 RPC 连接）
# ALCHEMY_API_KEY=your_alchemy_api_key
ALCHEMY_API_KEY=

# Infura API Key
# INFURA_API_KEY=your_infura_api_key
INFURA_API_KEY=

# Etherscan API Key（用于验证合约和交易）
# ETHERSCAN_API_KEY=your_etherscan_api_key
ETHERSCAN_API_KEY=

# ============================================
# Uniswap 配置
# ============================================

# Uniswap V2 Router 地址（主网）
UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D

# Uniswap V3 Router 地址（主网）
UNISWAP_V3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564

# ============================================
# 代币注册表（可选）
# ============================================

# 代币注册表文件路径（JSON 格式）
# TOKEN_REGISTRY_PATH=./tokens.json
TOKEN_REGISTRY_PATH=

# ============================================
# 性能配置
# ============================================

# HTTP 请求超时时间（秒）
HTTP_TIMEOUT=30

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=10

# RPC 重试次数
RPC_RETRY_COUNT=3

# ============================================
# 价格查询配置（未来功能）
# ============================================

# CoinGecko API Key（用于价格查询）
# COINGECKO_API_KEY=
COINGECKO_API_KEY=

# 价格缓存时间（秒）
PRICE_CACHE_TTL=60
